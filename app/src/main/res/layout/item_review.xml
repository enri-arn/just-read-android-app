<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/profile_image_user_review"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/circle_background_icon"
        android:contentDescription="@string/profile_image"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_image_user_review"
        android:layout_toEndOf="@+id/profile_image_user_review"
        android:layout_toRightOf="@+id/profile_image_user_review"
        android:background="@drawable/review_default_bg"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="4dp">

        <RatingBar
            android:id="@+id/ratingBar_item_review"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/user_name_review"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:rating="4"/>

        <TextView
            android:id="@+id/user_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ratingBar_item_review"
            android:padding="5dp"
            android:text="@string/default_user_review"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/user_name_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/default_user_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            tools:ignore="RtlSymmetry" />
    </RelativeLayout>

</RelativeLayout>